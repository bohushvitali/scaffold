{
  "name": "scaffold",
  "version": "1.0.1",
  "repository": "https://github.com/bohushvitali/scaffold.git",
  "license": "MIT",
  "author": "Vitali Bohush <bohushvitali@gmail.com>",
  "files": [
    "dist/src"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "NODE_ENV=development webpack --config webpack.prod.js",
    "clean": "npx rimraf dist",
    "commit": "git-cz",
    "compile": "tsc -p .",
    "preserver": "npm run build",
    "server": "ts-node server",
    "dev": "NODE_ENV=production webpack-dev-server --config webpack.dev.js",
    "e2e": "codeceptjs run",
    "e2e.steps": "codeceptjs gherkin:snippets",
    "e2e.watch": "nodemon --exec \"yarn run e2e.steps && yarn e2e\"",
    "lint": "tslint -c tslint.json --fix './src/**/*.ts'",
    "prepare": "npm run compile",
    "prettier": "prettier --write ./src/**/*.{ts,js,scss}",
    "push": "git push --follow-tags origin master",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master",
    "pretest": "npm run compile",
    "test": "jest",
    "test.watch": "jest --watch",
    "test.coverage": "jest --coverage",
    "upgrade": "npx sort-package-json && npx npm-check-updates -u && yarn",
    "watch": "tsc -p . -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ],
    "*.{ts,js,html,scss}": [
      "npm run prettier",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "cookie-parser": "1.4.4",
    "cors": "2.8.5",
    "uuid-v4-wasm": "0.5.0"
  },
  "devDependencies": {
    "@babel/core": "7.3.3",
    "@babel/preset-env": "7.3.1",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-angular": "7.5.0",
    "@commitlint/config-conventional": "7.5.0",
    "@commitlint/prompt": "7.5.0",
    "@types/body-parser": "1.17.0",
    "@types/cookie-parser": "1.4.1",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.5",
    "@types/node": "11.9.4",
    "@types/webassembly-js-api": "0.0.2",
    "@types/webpack-env": "1.13.7",
    "@webpack-cli/init": "0.1.3",
    "babel-loader": "8.0.5",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "codeceptjs": "2.0.4",
    "commitizen": "3.0.5",
    "cross-env": "5.2.0",
    "css-loader": "2.1.0",
    "cz-conventional-changelog": "2.1.0",
    "extract-text-webpack-plugin": "3.0.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "jest-cucumber": "2.0.5",
    "lint-staged": "8.1.4",
    "node-sass": "4.11.0",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "puppeteer": "1.12.2",
    "rimraf": "2.6.3",
    "sass-loader": "7.1.0",
    "sort-package-json": "1.19.0",
    "standard-version": "5.0.0",
    "style-loader": "0.23.1",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.2",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.3.3",
    "uglifyjs-webpack-plugin": "2.1.1",
    "webpack": "4.29.4",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.1.14",
    "webpack-merge": "4.2.1"
  }
}
