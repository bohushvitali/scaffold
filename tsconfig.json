{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "strictNullChecks": false,
    "lib": ["es2017", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}